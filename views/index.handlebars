<main>
    <div class="container-fluid but-fixed">
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-12 text-center">
                <h1>Eat-Da-Burger!</h1>
            </div>
            <div class="col-md-8 col-lg-5">
                <h3 class="text-center">Available Burgers</h3>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <!-- <li class="list-group-item d-flex align-items-center">{{this.id}}. {{this.burger_name}} <button class="btn btn-outline-primary btn-sm ml-auto" type="submit" data-id="{{this.id}}" >Devour it!</button></li> -->
                            <li class="list-group-item d-flex align-items-center">{{this.burger_name}} <button class="btn btn-outline-primary btn-sm ml-auto" type="submit" data-id="{{this.id}}" >Devour it!</button></li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-8 col-lg-1">
                <!-- spacer -->
            </div>
            <div class="col-md-8 col-lg-5">
                <h3 class="text-center">Devoured Burgers</h3>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <!-- <li class="list-group-item d-flex align-items-center">{{this.id}}. {{this.burger_name}}</li> -->
                            <li class="list-group-item d-flex align-items-center">{{this.burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-md-6 col-lg-4">
                <div class="card mb-3">
                    <h5 class="card-header">Create Your Own Burger</h5>
                    <div class="card-body">
                        <form class="create-form" action="/create" method="POST">
                            <div class="form-group">
                                <label for="burger-name">Burger Name:</label>
                                <input id="burger-name" class="form-control" type="text"  name="burgerName">
                            </div>
                            <button class="btn btn-primary" type="submit">Create Burger</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
